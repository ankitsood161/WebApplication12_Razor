@page
@model WebApplication12_Razor.Pages.BookList.IndexModel

<div class="container row p-2 m-2">
    <div class="col-9">
        <h2 class="text-primary">Book List</h2>
    </div>
    <div class="col-3">
        <a asp-page="Create" class="btn btn-info">
            Create New Book
        </a>
    </div>
</div>
@if (Model.Books.Count() > 0)
{
    <div class="container rounded border p-2 m-2">
        <table class="table table-bordered table-striped table-active">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Author</th>
                    <th>ISBN</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <form method="post">

                    @foreach (var item in Model.Books)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>@item.Author</td>
                            <td>@item.ISBN</td>
                            <td>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-info">Edit</a>
                                @* <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn bg-danger">Delete</a>*@
                                <button asp-page-handler="Delete" asp-route-id="@item.Id" class="btn btn-danger" onclick="return confirm('Want To Delete Data?')">Delete</button>
                            </td>
                        </tr>

                    }
                </form>
            </tbody>
        </table>
    </div>

}
else
{
    <p>No Data Found</p>
}

<br />
<br />
<h2 class="text-success text-center">OR</h2>
<div class="container">

    <table id="tblData" class="table table-striped table-bordered table-active">
        <thead>
            <tr>
                <th>Title</th>
                <th>Author</th>
                <th>ISBN</th>
                <th>Actions</th>
            </tr>
        </thead>
    </table>
</div>
@section scripts
{
  
    <script src="~/js/book.js"></script>
}
