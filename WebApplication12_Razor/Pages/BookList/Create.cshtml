@page
@model WebApplication12_Razor.Pages.BookList.CreateModel

<h2 class="text-primary text-center">New Book</h2>
<br/>
<br/>
<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="container rounded border">
        <div class="form-group row p-2 p-2">
            <div class="col-3">
                <label asp-for="Book.Title" class="form-control"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Title" class="form-control" />
                <span asp-validation-for="Book.Title" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group row p-2 p-2">
            <div class="col-3">
                <label asp-for="Book.Author" class="form-control"></label>
            </div>
            <div class="col-6">
                <input asp-for="Book.Author" class="form-control" />
                <span asp-validation-for="Book.Author" class="text-danger"></span>
            </div>
        </div>
    
    <div class="form-group row p-2 p-2">
        <div class="col-3">
            <label asp-for="Book.ISBN" class="form-control"></label>
        </div>
        <div class="col-6">
            <input asp-for="Book.ISBN" class="form-control" />
            <span asp-validation-for="Book.ISBN" class="text-danger"></span>
        </div>
    </div>
        <div class="form-group row p-2 p-2">
            <div class="col-3 offset-3">
                <input type="submit" value="Save" class="btn btn-success form-control" />
            </div>
            <div class="col-3 ">
                <a asp-page="Index" class="btn btn-outline-primary form-control">
                    Back To List
                </a>
            </div>
        </div>
    </div>
</form>